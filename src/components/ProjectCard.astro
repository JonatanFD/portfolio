---
import type { Project } from "../lib/data";

interface Props {
    project: Project;
}

const { project } = Astro.props;
const { title, description, href, coverUrl, tags } = project;
---

<section>
    <img
        src={coverUrl}
        alt={title}
        class="rounded-2xl aspect-video object-cover w-full"
    />
    <div class="mt-2 md:mt-4">
        <p class="font-semibold">{title}</p>
        <p>{description}</p>

        <div class="flex flex-wrap gap-2 mt-4">
            {
                tags.map((tag) => (
                    <span class="px-2 py-1 text-xs rounded-md bg-secondary text-zinc-400">
                        {tag}
                    </span>
                ))
            }
        </div>

        <p>
            <a href={href} class="hover:underline">Explore the project â†’</a>
        </p>
    </div>
</section>
