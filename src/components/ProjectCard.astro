---
import type { Project } from "../lib/data";
import P from "./ui/P.astro";

interface Props {
    project: Project;
}

const { project } = Astro.props;
const { title, description, href, coverUrl } = project;
---

<section>
    <img
        src={coverUrl}
        alt={title}
        class="rounded-2xl aspect-video object-cover w-full"
    />
    <div class="mt-4">
        <P>{title}</P>
        <P>{description}</P>

        <P>
            <a href={href} class="hover:underline"> See More</a>
        </P>
    </div>
</section>
