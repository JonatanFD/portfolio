---
import type { Project } from "../lib/data";
import Tag from "./ui/Tag.astro";

interface Props {
    project: Project;
}

const { project } = Astro.props;
const { title, description, href, coverUrl, tags } = project;
---

<section>
    <img
        src={coverUrl}
        alt={title}
        class="rounded-2xl aspect-video object-cover w-full"
    />
    <div class="mt-2 md:mt-4">
        <p class="font-medium text-zinc-100">{title}</p>
        <p class="text-zinc-400">{description}</p>

        <div class="flex flex-wrap gap-2 mt-4">
            {tags.map((tag) => <Tag label={tag} />)}
        </div>

        <p>
            <a
                href={href}
                class="text-zinc-300 hover:text-zinc-100 hover:underline transition-colors"
                >Explore the project â†’</a
            >
        </p>
    </div>
</section>
