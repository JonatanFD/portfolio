---
import { projects, techStack } from "../lib/data";
import Profile from "./profile.astro";
import ProjectCard from "./project-card.astro";
import H4 from "./ui/H4.astro";
import P from "./ui/P.astro";
import Separator from "./ui/separator.astro";
---

<section>
    <section class="pt-16">
        <Profile />
    </section>

    <Separator />

    <section>
        <div class="grid grid-cols-2">
            <H4>Experience</H4>

            <ul class="flex gap-2">
                <li>
                    <P>
                        Looking for my first opportunity to challenge myself and
                        contribute to a team.
                    </P>
                </li>
            </ul>
        </div>
    </section>

    <Separator />

    <section>
        <div class="grid grid-cols-2">
            <H4>Projects</H4>

            <ul>
                {
                    projects.map((project) => (
                        <li class="not-first:mt-4">
                            <ProjectCard project={project} />
                        </li>
                    ))
                }
            </ul>
        </div>
    </section>

    <Separator />

    <section>
        <div class="grid grid-cols-2">
            <H4>Tech Stack</H4>

            <div>
                {
                    techStack.map((cat) => (
                        <section class="not-first:mt-4">
                            <P>{cat.category}</P>
                            <ul class="grid grid-cols-6 gap-6 mt-2">
                                {cat.techs.map((tech) => (
                                    <li title={tech.name}>
                                        {<tech.component class="size-6" />}
                                    </li>
                                ))}
                            </ul>
                        </section>
                    ))
                }
            </div>
        </div>
    </section>
</section>
